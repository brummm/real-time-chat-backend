{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist/",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		// "noUnusedLocals": true,
		// "noImplicitReturns": true,
		"esModuleInterop": true,
		"sourceMap": true
	}
}
