{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"outDir": "./dist/",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": [
    "src/**/*"
  ]
}
